{
	"name": "nextjs-tw-boilerplate",
	"version": "0.1.0",
	"scripts": {
		"next:dev": "next dev",
		"tw:dev": "npx tailwindcss -i ./src/styles/tw.css -o ./src/styles/globals.css --watch",
		"dev": "run-p tw:dev next:dev",
		"build": "npx tailwindcss -i ./src/styles/tw.css -o ./src/styles/globals.css --minify && next build",
		"fmt": "npx prettier --write src",
		"start": "next start",
		"lint": "next lint"
	},
	"dependencies": {
		"next": "13.2.4",
		"nprogress": "^0.2.0",
		"react": "18.2.0",
		"react-dom": "18.2.0"
	},
	"devDependencies": {
		"@types/node": "18.15.3",
		"@types/nprogress": "^0.2.0",
		"@types/react": "18.0.28",
		"@types/react-dom": "18.0.11",
		"eslint": "8.36.0",
		"eslint-config-next": "13.2.4",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.6.2",
		"tailwindcss": "^3.0.24",
		"typescript": "5.0.2"
	}
}
